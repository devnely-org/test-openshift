{
  "kind": "PersistentVolume",
  "apiVersion": "v1",
  "metadata": {
    "name": "web-wp-data",
    "labels": {
      "app": "web",
      "app-service": "web-wp"
    }
  },
  "spec": {
    "capacity": {
      "storage": "8.3Gi"
    },
    "volumeMode": "Filesystem",
    "persistentVolumeReclaimPolicy": "Retain",
    "storageClassName": "",
    "accessModes": [
      "ReadWriteMany"
    ],
    "mountOptions": [
      "hard",
      "bg",
      "_netdev"
    ],
    "nfs": {
      "server": "ctrl.srv.world",
      "path": "/var/nfs-data/pv03"
    }
  }
}
